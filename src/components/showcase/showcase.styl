@require('../../variables.styl')

$action-button-size = 42px
$icon-size = 8px

.showcase
	background-color $bg
	color $text
	height 100%
	left 0
	position fixed
	top 0
	width 100%

	.showcase-gallery-action-start
		display inline-block

	.showcase-gallery-action-pause
		display none

	&.showcase-slideshow-active
		.showcase-gallery-action-start
			display none

		.showcase-gallery-action-pause
			display inline-block

.showcase-details
	top 0
	left 0
	margin 0 2em
	position fixed
	z-index 1
	width 420px

.showcase-description
.showcase-contact
	padding 2em

.showcase-description
	background-color $bg
	color $text
	position relative

	.pricetag
		bottom 0
		right 0
		font-size 1.2em
		background-color $bg-accent
		box-shadow 0 0 0 3px $bg-inverse
		transform translate(-50%, 50%)

.showcase-sold

	.pricetag
		background-color $bg-inverse
		box-shadow 0 0 0 3px $bg

.showcase-contact
	background-color $bg-inverse
	color $text-inverse

.showcase-gallery
	bottom 0
	left 0
	position fixed
	right 0
	top 0
	z-index 0

.showcase-images
	bottom 0
	left 0
	position absolute
	right 0
	top 0

.showcase-image
	background-position center
	background-repeat no-repeat
	background-size cover
	bottom 0
	left 0
	opacity 0
	pointer-events none
	position absolute
	right 0
	top 0
	transform scale(3)
	transition all $transition-slow

	&.showcase-image-active
		opacity 1
		transform scale(1)

.showcase-gallery-actions
	bottom 0
	left 50%
	margin 2em 0
	position fixed
	transform translateX(-50%)
	white-space nowrap

	button
		background-color $bg-inverse
		border 0
		border-radius $action-button-size
		box-shadow 0 0 0 .4em rgba($bg, .2)
		color $text-inverse
		cursor pointer
		display block
		font inherit
		height $action-button-size
		margin 0
		outline 0
		padding 0
		position relative
		transition all $transition-quick
		width $action-button-size

		&:hover
			background-color $bg-accent
			box-shadow 0 0 0 0 $bg-accent

.showcase-gallery-action
	display inline-block
	vertical-align top
	margin 0
	margin-right 1em

	&:last-child
		margin-right 0

.showcase-icon
	background-color transparent
	display inline-block
	height $icon-size
	left 50%
	position absolute
	top 50%
	transform translate(-50%, -50%)
	width $icon-size

	&.showcase-icon-back
		border-left solid 2px $text-inverse
		border-top solid 2px $text-inverse
		transform translate(-30%, -50%) rotate(-45deg)

	&.showcase-icon-forward
		border-bottom solid 2px $text-inverse
		border-right solid 2px $text-inverse
		transform translate(-70%, -50%) rotate(-45deg)

	&.showcase-icon-play
		border solid 5px transparent
		border-bottom-color $text-inverse
		border-right-color $text-inverse
		transform translate(-75%, -50%) rotate(-45deg)

	&.showcase-icon-pause
		border-left solid 3px $text-inverse
		border-right solid 3px $text-inverse
