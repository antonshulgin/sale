@require('./variables.styl')

*
	box-sizing border-box

html
body
	background $bg
	color $text
	font 400 10pt/1 sans-serif
	margin 0 auto
	max-width 900px
	padding 1em

a
	color inherit

	&[href]
		text-decoration underline

		&:hover
			color $bg-accent

h1
h2
	font-family sans-serif
	font-weight 600
	letter-spacing -.05em
	line-height 1
	margin 1.2em 0 .5em

	&:first-child
		margin-top 0

	&:last-child
		margin-bottom 0

h1
	font-size 1.6em

h2
	font-size 1.4em

p
	line-height 1.3
	margin .5em 0

	&:last-child
		margin-bottom 0
