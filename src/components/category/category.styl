@require('../../variables.styl')

$thumbnail-size = 160px

.category
	margin 2em 0

.category-items
	margin 1em 0

.category-item
	display inline-block
	margin-bottom 1em
	margin-right 1em
	text-align center
	vertical-align top
	width $thumbnail-size
	transition opacity $transition-quick

	&:hover

		.category-item-thumbnail
			box-shadow inset 0 0 0 0 #fff

		.pricetag
			background-color $bg-accent
			color $text-inverse

	.pricetag
		right 0
		top $thumbnail-size
		transform translateY(-100%)

.category-item-sold
	opacity .3

	&:hover
		opacity 1

.category-item-link
	display block
	position relative

.category-item-title
	display block
	margin 1em 0

.category-item-thumbnail
	background-position center
	background-repeat no-repeat
	background-size cover
	border-radius $thumbnail-size
	box-shadow inset 0 0 0 1em rgba(#fff, .2)
	display block
	height $thumbnail-size
	transition box-shadow $transition-quick
	width $thumbnail-size

@media (max-width: $width-small-screen), (max-height: $height-small-screen)

	$thumbnail-size-small-screen = 280px

	.category-items
		margin 1em -1em

	.category-item
		display block
		margin 1em 0
		position relative
		width auto
		font-size .9em

		.category-item-title
			background-color rgba($bg-inverse, .8)
			border-radius 2px
			bottom .5em
			color $text-inverse
			left .5em
			margin 0
			padding 1em
			position absolute
			text-align left

		.pricetag
			background-color $bg-accent
			border-radius 2px
			box-shadow none
			color $text-inverse
			font inherit
			height auto
			left 100%
			line-height inherit
			font-weight 600
			text-align inherit
			margin 0
			padding 1em
			right auto
			top 0
			transform translateX(2px)
			width auto

	.category-item-thumbnail
		border-radius 2px
		box-shadow none
		display block
		height $thumbnail-size-small-screen
		width auto

@media (max-width: $width-tiny-screen), (max-height: $height-tiny-screen)

	.category-item

		.category-item-title
			font-size .9em
