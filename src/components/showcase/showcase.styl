@require('../../variables.styl')

.showcase
	background-color $bg
	color $text
	height 100%
	left 0
	position fixed
	top 0
	width 100%

.showcase-details
	background-color $bg
	top 0
	color $text
	left 0
	margin 0 2em
	padding 2em
	position fixed
	z-index 1

.showcase-gallery
	bottom 0
	left 0
	position fixed
	right 0
	top 0
	z-index 0

.showcase-images
	bottom 0
	left 0
	position absolute
	right 0
	top 0

.showcase-image
	background-position center
	background-repeat no-repeat
	background-size cover
	bottom 0
	left 0
	opacity 0
	position absolute
	right 0
	top 0
	transform scale(3)
	transition all $transition-slow
	pointer-events none

	&.showcase-image-active
		opacity 1
		transform scale(1)
